<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="3.1.10"/>
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="3.1.10"/>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="3.1.10"/>
    <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="3.1.10"/>
    <PackageReference Include="Microsoft.AspNetCore.Diagnostics.EntityFrameworkCore" Version="3.1.10"/>
    <PackageReference Include="Microsoft.AspNetCore.Authorization" Version="3.1.10"/>
    <PackageReference Include="Google.Protobuf" Version="3.14.0"/>
  </ItemGroup>
  <ItemGroup>
    <ProtobufDef Include="$(ProjectDir)../common/protobuf/*.proto"/>
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="$(ProjectDir)Generated/*.cs" /> <!-- Are included during Codegen -->
  </ItemGroup>
  <Target Name="Codegen" BeforeTargets="BeforeBuild;BeforeRebuild">
    <MakeDir Directories="$(ProjectDir)Generated"/>
    <Exec Command="protoc --csharp_out=Generated --proto_path=$(ProjectDir)../common/protobuf %(ProtobufDef.Identity)"/>
    <ItemGroup>
      <Compile Include="$(ProjectDir)Generated/*.cs"/>
      <!-- FIXME: Clean doesn't clean up generated files -->
      <FileWrites Include="$(ProjectDir)Generated/*.cs"/>
    </ItemGroup>
  </Target>
</Project>